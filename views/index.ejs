<html>
<head>
	<title>Facebook Login using Node and Express</title>
</head>
<body>
<% if (!user) { %>
<div style="width:500px;height:180px;background-color:#ececec;padding:80px;padding-right:40px;margin-left:22%;margin-top:9%;">
	<h2 style="font-size:40px;">Welcome! Please log in.</h2>
	<a href="/auth/facebook"><img src="fb-login.jpg" width="151" height="24"></a>
	<a href="/auth/twitter"><img src="twitter-login.jpg" width="151" height="24"></a>
	<a href="/auth/github">GitHub Login</a>
</div>

<% } else { %>
<script type="text/javascript">
	function getCookie(name) {
		var matches = document.cookie.match(new RegExp(
				"(?:^|; )" + name.replace(/([\.$?*|{}\(\)\[\]\\\/\+^])/g, '\\$1') + "=([^;]*)"
		));
		return matches ? decodeURIComponent(matches[1]) : undefined;
	}

</script>
<h2>Hello, <%= user.displayName %>.</h2>
<% } %>
</body>
</html>
